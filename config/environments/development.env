# Development Environment Configuration
# This file contains environment-specific settings for development

# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database Configuration
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=rag_interface_dev
DB_USERNAME=rag_user
DB_PASSWORD=dev_password_2025
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10
REDIS_RETRY_ON_TIMEOUT=true
REDIS_CACHE_TTL=900

# Service URLs
ERROR_REPORTING_SERVICE_URL=http://localhost:8000
USER_MANAGEMENT_SERVICE_URL=http://localhost:8001
RAG_INTEGRATION_SERVICE_URL=http://localhost:8002
CORRECTION_ENGINE_SERVICE_URL=http://localhost:8003
VERIFICATION_SERVICE_URL=http://localhost:8004

# Service Ports
ERS_PORT=8000
UMS_PORT=8001
RIS_PORT=8002
CES_PORT=8003
VS_PORT=8004
FRONTEND_PORT=3000

# API Configuration
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Security Configuration
SECRET_KEY=dev-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# External Services
OPENAI_API_KEY=your-openai-api-key-here
PINECONE_API_KEY=your-pinecone-api-key-here

# Monitoring and Observability
ENABLE_METRICS=true
ENABLE_TRACING=true
METRICS_PORT=9090

# Development Tools
MAILHOG_WEB_PORT=8025
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081

# Testing
TESTING=false
TEST_DATABASE_URL=sqlite+aiosqlite:///:memory:
TEST_REDIS_URL=redis://localhost:6379/15
