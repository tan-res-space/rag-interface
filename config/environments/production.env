# Production Environment Configuration
# This file contains environment-specific settings for production

# Application Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DB_TYPE=postgresql
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT:-5432}
DB_DATABASE=${DB_DATABASE}
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=60
DB_ECHO=false

# Redis Configuration
REDIS_URL=${REDIS_URL}
REDIS_MAX_CONNECTIONS=20
REDIS_RETRY_ON_TIMEOUT=true
REDIS_CACHE_TTL=3600

# Service URLs (will be set by deployment)
ERROR_REPORTING_SERVICE_URL=${ERROR_REPORTING_SERVICE_URL}
USER_MANAGEMENT_SERVICE_URL=${USER_MANAGEMENT_SERVICE_URL}
RAG_INTEGRATION_SERVICE_URL=${RAG_INTEGRATION_SERVICE_URL}
CORRECTION_ENGINE_SERVICE_URL=${CORRECTION_ENGINE_SERVICE_URL}
VERIFICATION_SERVICE_URL=${VERIFICATION_SERVICE_URL}

# Service Ports
ERS_PORT=8000
UMS_PORT=8001
RIS_PORT=8002
CES_PORT=8003
VS_PORT=8004
FRONTEND_PORT=3000

# API Configuration
API_PREFIX=/api/v1
CORS_ORIGINS=${CORS_ORIGINS}

# Security Configuration
SECRET_KEY=${SECRET_KEY}
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=1

# External Services
OPENAI_API_KEY=${OPENAI_API_KEY}
PINECONE_API_KEY=${PINECONE_API_KEY}

# Monitoring and Observability
ENABLE_METRICS=true
ENABLE_TRACING=true
METRICS_PORT=9090

# Logging
LOG_JSON=true
LOG_FILE=/var/log/rag-interface/app.log

# Testing
TESTING=false
