# Testing Environment Configuration
# This file contains environment-specific settings for testing

# Application Environment
ENVIRONMENT=testing
DEBUG=true
LOG_LEVEL=DEBUG

# Database Configuration (In-memory for fast tests)
DB_TYPE=in_memory
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=rag_interface_test
DB_USERNAME=test_user
DB_PASSWORD=test_password
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=10
DB_ECHO=false

# Redis Configuration (Test database)
REDIS_URL=redis://localhost:6379/15
REDIS_MAX_CONNECTIONS=5
REDIS_RETRY_ON_TIMEOUT=true
REDIS_CACHE_TTL=60

# Service URLs (Test endpoints)
ERROR_REPORTING_SERVICE_URL=http://localhost:8000
USER_MANAGEMENT_SERVICE_URL=http://localhost:8001
RAG_INTEGRATION_SERVICE_URL=http://localhost:8002
CORRECTION_ENGINE_SERVICE_URL=http://localhost:8003
VERIFICATION_SERVICE_URL=http://localhost:8004

# Service Ports (Same as dev for simplicity)
ERS_PORT=8000
UMS_PORT=8001
RIS_PORT=8002
CES_PORT=8003
VS_PORT=8004
FRONTEND_PORT=3000

# API Configuration
API_PREFIX=/api/v1
CORS_ORIGINS=*

# Security Configuration (Weak for testing)
SECRET_KEY=test-secret-key-not-for-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# External Services (Mock/Test keys)
OPENAI_API_KEY=test-openai-key
PINECONE_API_KEY=test-pinecone-key

# Monitoring and Observability
ENABLE_METRICS=false
ENABLE_TRACING=false

# Testing
TESTING=true
TEST_DATABASE_URL=sqlite+aiosqlite:///:memory:
TEST_REDIS_URL=redis://localhost:6379/15

# Test-specific settings
PYTEST_TIMEOUT=30
COVERAGE_THRESHOLD=90
PARALLEL_TESTS=true
